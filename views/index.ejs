<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div
      class="main w-full min-h-screen bg-zinc-900 text-white px-5 lg:px-10 py-12"
    >
      <div class="form">
        <form
          action="/create"
          method="POST"
          class="flex flex-col w-full items-start justify-center gap-3"
        >
          <input
            class="px-4 py-2 rounded-md w-full text-lg bg-zinc-800"
            type="text"
            placeholder="Title goes here..."
            name="title"
          />
          <textarea
            class="resize-none px-4 py-2 rounded-md w-full h-[10rem] text-lg bg-zinc-800"
            placeholder="Write your task details here..."
            name="details"
          ></textarea>
          <input
            class="bg-green-500 hover:bg-green-600 duration-100 font-bold text-white px-4 py-2 text-lg rounded-md cursor-pointer"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>
      <div class="tasks mt-12 mb-6">
        <% if(files.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
          <% files.forEach(function(val) { %>
          <div
            class="task flex flex-col bg-zinc-800 h-max rounded-md p-3 sm:p-5 gap-3"
          >
          <h1 class="text-3xl tracking-tight"><%= val.split('_').join(' ') %></h1>
            <div class="flex items-center justify-start gap-2">
            <a href="/file/<%= val %>"
              class="bg-green-500 w-max hover:bg-green-600 duration-100 font-bold text-white px-4 py-2 text-sm rounded-md cursor-pointer"
              >Read More</a>
            <a href="/edit/<%= val %>"
              class="bg-green-500 w-max hover:bg-green-600 duration-100 font-bold text-white px-4 py-2 text-sm rounded-md cursor-pointer"
              >Edit filename</a>
            </div>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <div
          class="w-full h-40 bg-zinc-800 flex items-center justify-center rounded-md"
        >
          <h3 class="text-xl font-bold">No task yet</h3>
        </div>
        <% } %>
      </div>
    </div>

    <script src="/path/to/your/script.js"></script>
  </body>
</html>
